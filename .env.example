# Copy file này thành `.env` trước khi chạy docker compose.

# ===================== PostgreSQL =====================
PG_USER=postgres
PG_PASSWORD=12345678
PG_NAME=dataa

# ===================== MongoDB =====================
MONGODB_DB=Data

# ===================== Neo4j =====================
NEO4J_USER=neo4j
NEO4J_PASSWORD=12345678
NEO4J_DATABASE=neo4j

# ===================== MinIO =====================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=documents

# IMPORTANT: URL public để TRÌNH DUYỆT (frontend) truy cập được MinIO.
# Local: http://localhost:9000
# Server: http://<SERVER_IP>:9000  hoặc https://minio.your-domain
MINIO_PUBLIC_BASE_URL=http://localhost:9000

# ===================== Ports (host) =====================
BACKEND_PORT=8000
FRONTEND_PORT=80
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
